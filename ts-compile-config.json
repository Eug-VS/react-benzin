{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "skipLibCheck": true,
    "declaration": true,
    "listEmittedFiles": true
  },
  "include": [
    "src/lib"
  ]
}
